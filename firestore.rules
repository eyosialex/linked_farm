rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /agricultural_items/{itemId} {
      // Allow read for everyone
      allow read: if true;
      
      // Allow create only if the document doesn't exist (deduplication)
      // or allow updates only by the seller
      allow create: if request.auth != null && !exists(/databases/$(database)/documents/agricultural_items/$(itemId));
      
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.sellerId;
    }
    
    // Default rules for other collections...
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
